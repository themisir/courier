@using Microsoft.AspNetCore.Routing

<div class="navbar-expand-md">
    <div class="collapse navbar-collapse" id="navbar-menu">
        <div class="navbar navbar-light">
            <div class="container-xl">
                @switch (ViewData["Navigation"])
                {
                    case "Package":
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link @ManageNavPages.HomeNavClass(ViewContext)" asp-page="./Home" asp-route-packageName="@Context.GetRouteValue("packageName")">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-home" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <polyline points="5 12 3 12 12 3 21 12 19 12"></polyline>
                                            <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                                            <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
                                        </svg>
                                    </span>
                                    <span class="nav-link-title">
                                        Home
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @ManageNavPages.ChangelogNavClass(ViewContext)" asp-page="./Changelog" asp-route-packageName="@Context.GetRouteValue("packageName")">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-exchange" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <circle cx="5" cy="18" r="2"></circle>
                                            <circle cx="19" cy="6" r="2"></circle>
                                            <path d="M19 8v5a5 5 0 0 1 -5 5h-3l3 -3m0 6l-3 -3"></path>
                                            <path d="M5 16v-5a5 5 0 0 1 5 -5h3l-3 -3m0 6l3 -3"></path>
                                        </svg>
                                    </span>
                                    <span class="nav-link-title">
                                        Changelog
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @ManageNavPages.MembersNavClass(ViewContext)" asp-page="./Members" asp-route-packageName="@Context.GetRouteValue("packageName")">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-users" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <circle cx="9" cy="7" r="4"></circle>
                                            <path d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path>
                                            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                            <path d="M21 21v-2a4 4 0 0 0 -3 -3.85"></path>
                                        </svg>
                                    </span>
                                    <span class="nav-link-title">
                                        Members
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @ManageNavPages.SettingsNavClass(ViewContext)" asp-page="./Settings" asp-route-packageName="@Context.GetRouteValue("packageName")">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-adjustments-alt" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <rect x="4" y="8" width="4" height="4"></rect>
                                            <line x1="6" y1="4" x2="6" y2="8"></line>
                                            <line x1="6" y1="12" x2="6" y2="20"></line>
                                            <rect x="10" y="14" width="4" height="4"></rect>
                                            <line x1="12" y1="4" x2="12" y2="14"></line>
                                            <line x1="12" y1="18" x2="12" y2="20"></line>
                                            <rect x="16" y="5" width="4" height="4"></rect>
                                            <line x1="18" y1="4" x2="18" y2="5"></line>
                                            <line x1="18" y1="9" x2="18" y2="20"></line>
                                        </svg>
                                    </span>
                                    <span class="nav-link-title">
                                        Settings
                                    </span>
                                </a>
                            </li>
                        </ul>
                        break;

                    case "Account":
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link @ManageNavPages.DashboardNavClass(ViewContext)" asp-page="./Dashboard">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-home" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <polyline points="5 12 3 12 12 3 21 12 19 12"></polyline>
                                            <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7"></path>
                                            <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6"></path>
                                        </svg>
                                    </span>
                                    <span class="nav-link-title">
                                        Home
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @ManageNavPages.PersonalTokensNavClass(ViewContext)" asp-page="./PersonalTokens">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-key" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <circle cx="8" cy="15" r="4"></circle>
                                            <line x1="10.85" y1="12.15" x2="19" y2="4"></line>
                                            <line x1="18" y1="5" x2="20" y2="7"></line>
                                            <line x1="15" y1="8" x2="17" y2="10"></line>
                                        </svg>
                                    </span>
                                    <span class="nav-link-title">
                                        Personal tokens
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @ManageNavPages.ProfileNavClass(ViewContext)" asp-page="./Profile">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <circle cx="12" cy="7" r="4"></circle>
                                            <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path>
                                        </svg>
                                    </span>
                                    <span class="nav-link-title">
                                        Profile
                                    </span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" asp-page="./ChangePassword">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-lock" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                            <rect x="5" y="11" width="14" height="10" rx="2"></rect>
                                            <circle cx="12" cy="16" r="1"></circle>
                                            <path d="M8 11v-4a4 4 0 0 1 8 0v4"></path>
                                        </svg>
                                    </span>
                                    <span class="nav-link-title">
                                        Change password
                                    </span>
                                </a>
                            </li>
                        </ul>
                        break;

                    default:
                        <div></div>
                        break;
                }

                <div class="my-2 my-md-0 flex-grow-1 flex-md-grow-0 order-first order-md-last">
                    <form asp-page="/Account/Dashboard" method="get">
                        <div class="input-icon">
                            <span class="input-icon-addon">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-search" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                                    <circle cx="10" cy="10" r="7"></circle>
                                    <line x1="21" y1="21" x2="15" y2="15"></line>
                                </svg>
                            </span>
                            <input name="query" type="text" class="form-control" placeholder="Search…" aria-label="Search in website" value="@ViewData["SearchQuery"]">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>